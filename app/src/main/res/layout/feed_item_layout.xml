<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/feed_list_item_padding"
    android:paddingTop="@dimen/feed_list_item_padding">

    <TextView
        android:id="@+id/feed_item_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/feed_item_arrow"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/feed_item_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/feed_item_title"
        android:layout_toLeftOf="@+id/feed_item_thumbail"
        android:textColor="@android:color/black"
        android:textSize="13sp" />

    <ImageView
        android:id="@+id/feed_item_thumbail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/feed_item_title"
        android:layout_toLeftOf="@+id/feed_item_arrow" />

    <ImageView
        android:id="@+id/feed_item_arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerInParent="true"
        android:src="@drawable/ic_small_arrow" />
</RelativeLayout>
